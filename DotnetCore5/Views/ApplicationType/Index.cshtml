@model IEnumerable<DotnetCore5.Models.ApplicationType>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application Type List</h2>
        </div>
        <div class="col-6 text-right">
            <a  asp-action="Create" class="btn btn-primary">
                Create New Application Type
            </a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
    <table class="table table-border table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Name </th>
               
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
            <tr>
                <td width="50%">@obj.Name</td>               
                <td></td>
            </tr>
            }
        </tbody>
    </table>
    }
    else 
    {
        <p>Sorry! No Application Type  Exists.</p>
    }



</div>


